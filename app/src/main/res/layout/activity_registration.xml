<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlogin"
    tools:context=".Registration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/greeting"
            android:layout_marginVertical="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let Your Vote Change the World..."
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/enterSec"
            android:layout_centerInParent="true"
            android:layout_below="@id/greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtRegFname"
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:layout_marginRight="5sp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/edittextback"/>

                <EditText
                    android:id="@+id/txtRegLname"
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="5sp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/edittextback"/>
            </LinearLayout>

            <EditText
                android:id="@+id/txtRegEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/edittextback"/>

            <EditText
                android:id="@+id/txtRegPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Passowrd"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/edittextback"
                android:inputType="textPassword"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="bottom">

                <Spinner
                    android:id="@+id/genderSpinner"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Username"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:background="@drawable/edittextback"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="bottom">

                <Spinner
                    android:id="@+id/areaSpinner"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Username"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:background="@drawable/edittextback"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtRegAge"
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:layout_marginRight="5sp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/edittextback"/>

                <EditText
                    android:id="@+id/txtRegPhone"
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:hint="Contact No"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="5sp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/edittextback"/>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you have an account?"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"
                    android:textSize="12sp" />

                <TextView
                    android:onClick="goToLogin"
                    android:id="@+id/loginlink"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Login here"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"
                    android:textSize="12sp"
                    android:clickable="true"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:onClick="Register"
                android:id="@+id/regnext"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Register"
                android:background="@drawable/btn_login"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textSize="15dp"
                android:clickable="true"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>