<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CandidateProfile">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@null"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:background="@color/transparent"
                    android:fontFamily="@font/regular"
                    android:src="@drawable/ic_back"/>

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/candidateProfileName"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="25sp"
                android:layout_marginHorizontal="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/bold"
                android:text="Candidate Profile"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <androidx.core.widget.NestedScrollView
                android:layout_below="@id/candidateProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_below="@id/candidateProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15sp"
                    android:layout_marginTop="15sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        android:elevation="2sp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/candidateProfileImg"
                                android:layout_width="100sp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginVertical="25sp"
                                android:layout_weight="1"
                                android:src="@drawable/pic2" />

                            <LinearLayout
                                android:weightSum="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10sp">


                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0sp"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/medium"
                                        android:text="Followers"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/candidateProfileFollowers"
                                        android:layout_below="@id/candidateProfileName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/bold"
                                        android:text=""
                                        android:textColor="@color/grey"
                                        android:textSize="20sp" />


                                </LinearLayout>

                            </LinearLayout>

                            <Button
                                android:id="@+id/loginbut"
                                android:layout_marginHorizontal="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:text="Follow"
                                android:background="@drawable/btn_login"
                                android:textColor="@color/white"
                                android:fontFamily="@font/bold"
                                android:textSize="15dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        android:elevation="2sp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15sp"
                            android:orientation="vertical">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5sp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/candidateProfileParty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/medium"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/regular"
                                    android:text="Political Party"
                                    android:textColor="@color/black"
                                    android:textSize="9sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5sp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/bold"
                                    android:text="Political History"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/candidateProfileDesc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/regular"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <Button
                        android:onClick="goToComplaint"
                        android:layout_marginHorizontal="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="Send Complaint"
                        android:background="@drawable/btn_follow"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bold"
                        android:textSize="15dp"/>

                    <Button
                        android:onClick="goToFeedback"
                        android:layout_marginHorizontal="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="Send Feedback"
                        android:background="@drawable/btn_follow"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bold"
                        android:textSize="15dp"/>
                    <Button
                        android:onClick="goToDonation"
                        android:layout_marginHorizontal="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="Send Donation"
                        android:background="@drawable/btn_follow"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bold"
                        android:textSize="15dp"/>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>