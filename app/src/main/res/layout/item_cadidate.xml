<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="125sp"
    android:padding="5sp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="10sp"
        card_view:cardBackgroundColor="@color/lightgray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:paddingVertical="5sp"
            android:weightSum="5">

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                card_view:cardElevation="0dp"
                card_view:cardCornerRadius="15sp"
                card_view:cardBackgroundColor="@color/grey">

                <ImageView
                    android:id="@+id/candidateItemImg"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/testprofile"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/candidateItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/medium"
                    android:text="Jhon "
                    android:textColor="@color/black"
                    android:layout_marginTop="8sp"
                    android:layout_marginHorizontal="10sp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/candidateItemParty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/medium"
                    android:text="Malith Ileperuma"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5sp"
                    android:layout_marginHorizontal="10sp"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/candidateItemFollowBtn"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_marginVertical="5sp"
                    android:layout_gravity="end"
                    android:text="Follow"
                    android:background="@drawable/btn_follow"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bold"
                    android:textSize="10dp"/>



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>
